package br.com.plgs.AppClientes.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import br.com.plgs.AppClientes.configuration.JwtTokenUtil;
import br.com.plgs.AppClientes.exception.ClienteException;

@Service
public class AuthService {

    @Autowired
    private JwtTokenUtil jwtTokenUtil;
    
    @Autowired
    private UserRepository userRepository; 
    
    private BCryptPasswordEncoder passwordEncoder = new BCryptPasswordEncoder();

    public String authenticate(String username, String password) {
        User user = userRepository.findByUsername(username)
            .orElseThrow(() -> new ClienteException("Nome de usuário ou senha incorretos."));
        
        if (!passwordEncoder.matches(password, user.getPassword())) {
            throw new ClienteException("Nome de usuário ou senha incorretos.");
        }

        return jwtTokenUtil.createToken(username);
    }
}