package br.com.plgs.AppClientes.service;

import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import org.springframework.web.util.UriComponentsBuilder;

import br.com.plgs.AppClientes.model.Address;

@Service
public class CepService {

    private final String viaCepUrl = "https://viacep.com.br/ws/";

    public Address searchCep(String cep) {
        String url = UriComponentsBuilder.fromHttpUrl(viaCepUrl + cep + "/json").toUriString();

        RestTemplate restTemplate = new RestTemplate();

        return restTemplate.getForObject(url, Address.class);
    }
}